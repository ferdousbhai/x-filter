{
  "manifest_version": 3,
  "name": "X Content Filter",
  "version": "1.0",
  "description": "Analyzes and filters content on X.com based on configured topics",
  "permissions": [
    "storage"
  ],
  "host_permissions": ["https://x.com/*", "https://api.groq.com/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://x.com/*"],
      "js": ["content.js"]
    }
  ]
}